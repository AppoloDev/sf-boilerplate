<div class="flex flex-col items-center p-6 lg:p-12">
    <div class="max-w-5xl w-full space-y-6 sm:space-y-12">
        <fieldset>
            <div class="space-y-2 mb-10">
                <p class="text-xl">{{ 'personal_information'|trans }}</p>
            </div>

            <div class="lg:flex gap-4 space-y-6 lg:space-y-0">
                <div class="w-full lg:w-1/2">
                    {{ form_row(form.lastname) }}
                </div>
                <div class="w-full lg:w-1/2">
                    {{ form_row(form.firstname) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="pt-6 sm:pt-12 border-t">
            <div class="space-y-2 mb-10">
                <p class="text-xl">{{ 'login_credentials'|trans }}</p>
            </div>

            <div class="lg:flex gap-4">
                <div class="w-full lg:w-1/2">
                    {{ form_row(form.email) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="pt-6 sm:pt-12 border-t">
            <div class="space-y-2 mb-10">
                <p class="text-xl">{{ 'access_levels'|trans }}</p>
            </div>

            <div class="lg:flex gap-4">
                <div class="w-full">
                    {{ form_row(form.roles) }}
                </div>
            </div>
        </fieldset>

        <div class="pt-6 sm:pt-12 border-t">
            <twig:FormSubmit
                    form="{{ form }}"
                    deleteButtonLink="{{ user is defined and is_granted('admin_user_delete', user) ? path('admin_user_delete', {id: user.id}) :null }}"
                    deleteSwalTitle="{{ 'delete_this_user'|trans }}"
                    deleteSwalColor="red"
            />
        </div>
    </div>
</div>
