<div class="flex flex-col items-center p-6 lg:p-12">
    <div class="max-w-5xl w-full space-y-6 sm:space-y-12 divide-solid divide-y">
        <fieldset>
            <div class="space-y-2 mb-10">
                <p class="text-xl">Informations personnelles</p>
            </div>

            <div class="lg:flex gap-4 space-y-6 lg:space-y-0">
                <div class="w-full lg:w-1/2">
                    {{ form_row(form.lastName) }}
                </div>
                <div class="w-full lg:w-1/2">
                    {{ form_row(form.firstName) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="pt-6 sm:pt-12">
            <div class="space-y-2 mb-10">
                <p class="text-xl">Identifiants de connexion</p>
            </div>

            <div class="lg:flex gap-4">
                <div class="w-full lg:w-1/2">
                    {{ form_row(form.email) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="pt-6 sm:pt-12">
            <div class="space-y-2 mb-10">
                <p class="text-xl">Rôles d'accès</p>
            </div>

            <div class="lg:flex gap-4">
                <div class="w-full lg:w-1/2">
                    {{ form_row(form.roles) }}
                </div>
            </div>
        </fieldset>

        <div class="pt-6 sm:pt-12">
            {{ component('form_submit', {
                form: form,
                deletePath: user is defined and is_granted('admin_user_delete', user) ? path('admin_user_delete', {id: user.id}) :null,
                swal: {
                title: 'Supprimer cet utilisateur',
                text: 'Vous êtes sur le point d’effectuer une action totalement irréversible …',
                type: 'danger'
            }}) }}
        </div>
    </div>
</div>