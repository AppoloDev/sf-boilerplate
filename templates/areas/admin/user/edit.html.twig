{% extends '_layout/admin.html.twig' %}

{% block title %}{{ user.firstname}} {{ user.lastname }}{% endblock %}

{% block breadcrumb %}
    <twig:Breadcrumb items="{{  [
        {path: path('admin_dashboard'), label: 'home'|trans},
        {path: path('admin_user_list'), label: 'list_of_users'|trans},
        {path: null, label: block('title')},
    ] }}"/>
{% endblock %}

{% block body %}
    {% component FormLayout with {
        headerTitle: block('title'),
    } %}
        {% block form_render %}
            {% include 'areas/admin/user/_form.html.twig' %}
        {% endblock %}
    {% endcomponent %}
{% endblock %}
