<chartjs-line remote-url="{{ remoteUrl }}" month="{{ month }}" year="{{ year }}">
    <div class="px-2 mb-4 flex justify-between items-center">
        <button class="hs-dropdown-toggle py-1.5 px-2 inline-flex justify-center items-center gap-2 rounded-md bg-gray-200 text-gray-700 align-middle focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-teal-600 hover:bg-gray-100 transition-all text-sm"
                data-prev>
            Précédent
        </button>
        <div class="font-bold text-lg capitalize" data-date></div>
        <button class="hs-dropdown-toggle py-1.5 px-2 inline-flex justify-center items-center gap-2 rounded-md bg-gray-200 text-gray-700 align-middle focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-teal-600 hover:bg-gray-100 transition-all text-sm"
                data-next>
            Suivant
        </button>
    </div>

    <canvas class="min-h-[250px] lg:min-h-[400px]"></canvas>
</chartjs-line>