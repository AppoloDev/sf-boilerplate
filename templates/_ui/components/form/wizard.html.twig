<div class="flex flex-col items-center p-6 lg:p-12 !pb-0">
    <div class="max-w-5xl w-full grid grid-cols-1 divide-y lg:divide-y-0 lg:divide-x divide-gray-200 overflow-hidden rounded-lg border border-gray-200 sm:grid-cols-3">
        {% for step in steps %}
            {% set element = 'div' %}

            {% if step.path is defined %}
                {% set element = 'a' %}
            {% endif %}

            <{{ element}} {% if step.path is defined %}href="{{ step.path }}"{% endif%} class="flex items-center gap-4 p-6 lg:p-8 transition-all {{ step.class is defined ? step.class : '' }}">
                <div class="flex justify-center items-center border border-gray-200 rounded-full w-5 h-5 p-3">
                    {{ loop.index }}
                </div>

                <div class="leading-none">
                    <div class="text-sm font-medium">{{ step.title }}</div>
                    <div class="mt-0.5 text-xs">{{ step.subtitle }}</div>
                </div>
            </{{ element}}>
        {% endfor %}
    </div>
</div>
